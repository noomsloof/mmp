@model InvestPlan

@{
    ViewData["Title"] = "Edit";
}


<h1 class="text-center">แก้ไขแผนการ</h1>

<form method="post" asp-controller="Calculate" asp-action="Edit">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time"></label>
        <input type="text" asp-for="Time" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YieldPerYear"></label>
        <input type="text" asp-for="YieldPerYear" class="form-control" />
        <span asp-validation-for="YieldPerYear" class="text-danger"></span>
    </div>

    <button style="margin-top:1rem;" type="submit" class="btn btn-primary"> แก้ไข </button>
</form>

