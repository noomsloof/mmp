@model Saving

@{
    ViewData["Title"] = "เพิ่มข้อมูล";
}

<h1 class="text-center">เพิ่มรายการ</h1>

<form method="post" asp-controller="Fund" asp-action="Create">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Wealt"></label>
        <input type="text" asp-for="Wealt" class="form-control" />
        <span asp-validation-for="Wealt" class="text-danger"></span>

    </div>
    <button style="margin-top:1rem;" type="submit" class="btn btn-primary"> เพิ่ม </button>
</form>
